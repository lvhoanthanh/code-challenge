{
  "name": "express-backend",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migration:generate": "typeorm migration:generate ./src/migrations/Migration -d ./src/database/data-source.ts",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/database/data-source.ts",
    "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop -d ./src/database/data-source.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/database/data-source.ts",
    "seed": "ts-node ./src/database/seed.ts",
    "devops:clean": "yarn schema:drop && yarn migration:run && yarn seed"
  },
  "dependencies": {
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^24.3.0",
    "node-pg-migrate": "^6.2.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}